rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    // ============== USERS COLLECTION ==============
    match /users/{userId} {
      // Users can read their own profile
      // Also allow reading verified doctor/careProvider profiles (for patient browsing)
      allow get: if isOwner(userId) || 
        (resource.data.role == 'doctor' && resource.data.isVerifiedDoctor == true) ||
        (resource.data.role == 'careProvider' && resource.data.isVerifiedDoctor == true);
      
      // Allow list queries for verified doctors (for browsing/searching)
      // This allows queries like: where role == 'doctor' && isVerifiedDoctor == true
      // Also allow admins to list pending verifications
      allow list: if resource.data.role == 'doctor' && resource.data.isVerifiedDoctor == true ||
        resource.data.role == 'careProvider' && resource.data.isVerifiedDoctor == true ||
        isAdmin();
      
      // Users can create/update their own profile
      // Admins can update doctor verification status
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId) || 
        (isAdmin() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['isVerifiedDoctor', 'verifiedAt']));
      
      // Users can delete their own profile
      allow delete: if isOwner(userId);
    }
    
    // ============== APPOINTMENTS COLLECTION ==============
    match /appointments/{appointmentId} {
      // Users can read appointments they created or are assigned to
      allow read: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid ||
        resource.data.doctorId == request.auth.uid ||
        request.auth.uid == resource.data.createdBy
      );
      
      // Users can create appointments
      allow create: if isAuthenticated() && 
        request.resource.data.patientId == request.auth.uid;
      
      // Patients can update their own appointments, doctors can update assigned appointments
      allow update: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid ||
        resource.data.doctorId == request.auth.uid
      );
      
      // Only patients can delete their own appointments
      allow delete: if isAuthenticated() && 
        resource.data.patientId == request.auth.uid;
    }
    
    // ============== CONSULTATIONS COLLECTION ==============
    match /consultations/{consultationId} {
      // Users can read consultations they're part of
      allow read: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid ||
        resource.data.doctorId == request.auth.uid
      );
      
      // Doctors and patients can create consultations
      allow create: if isAuthenticated() && (
        request.resource.data.patientId == request.auth.uid ||
        request.resource.data.doctorId == request.auth.uid
      );
      
      // Both parties can update consultations
      allow update: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid ||
        resource.data.doctorId == request.auth.uid
      );
    }
    
    // ============== REVIEWS COLLECTION ==============
    match /reviews/{reviewId} {
      // Anyone can read reviews (for public display)
      allow read: if true;
      
      // Only authenticated users can create reviews
      allow create: if isAuthenticated() && 
        request.resource.data.userId == request.auth.uid;
      
      // Users can update/delete their own reviews
      allow update, delete: if isAuthenticated() && 
        resource.data.userId == request.auth.uid;
    }
    
    // ============== VERIFICATION CODES COLLECTION ==============
    match /verification_codes/{userId} {
      // Only the user can read their own verification code
      allow read: if isOwner(userId);
      
      // System can create verification codes (during signup)
      allow create: if isAuthenticated();
      
      // Users can delete their own verification codes
      allow delete: if isOwner(userId);
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
